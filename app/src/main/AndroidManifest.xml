<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mainwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".daos.UserProfile"></activity>
        <activity android:name=".MapView" />
        <activity
            android:name=".authentication.RegisterActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".authentication.WelcomeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".authentication.NewUserInfoActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".CongratulationActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".SelectWork"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".selectTravel"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>